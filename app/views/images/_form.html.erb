<%if @image.errors.any? %>
  <h2>The following error prevent the image from being created</h2>
    <ul>
      <% @image.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
      <%end%>
    </ul>
<% end %>

<div class="row form_container">
  <div class="col-xs-12">
    <%= form_for(@image, :html => {class: "form-horizontal", role:"form"}) do |f|%>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2 ">
          <%= f.label :imagename, class:"control-label"%>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :imagename, class: "form-control", placeholder: "Imaginary Image", autofocus: true%>
        </div>
      </div>
      
       <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2 ">
          <%= f.label :category, class:"control-label"%>
        </div>
        <div class="col-sm-6">
          <%= f.select(:category, ["Women's Cut", "Men's Cut", "Color", "Bridal", "Prom"], {:class => "form-control"}) %>
        </div>
      </div>
        
        
       

      <div class="form-group">
        <div class="col-sm-offset-5 col-sm-4">
          <%= f.submit class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%=link_to "Cancel request and return to Gallery", images_path %> ]
    </div>
  </div>
</div>





 
