<%if @image.errors.any? %>
  <h2>The following error prevent the image from being created</h2>
    <ul>
      <% @image.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
      <%end%>
    </ul>
<% end %>


<%= form_for @image do |f|%>
  <p>
    <%= f.label :imagename %><br>
    <%= f.text_field :imagename%>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <%= link_to 'Gallery', images_path %>
<% end %>