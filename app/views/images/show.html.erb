<h2 align="center"><%= @image.imagename%> </h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center"><strong>Category:</strong></h4>
  <hr>
  <%= @image.category %>
  <div class="image-action">
    <%= link_to 'Edit', edit_image_path(@image), class: "btn btn-xs btn-primary"%>
    <%= link_to 'Delete', image_path(@image), method: :delete, 
                                data: { confirm: "Are you sure you want to delete the article?"}, 
                                class: "btn btn-xs btn-danger" %>
    <%=link_to "Back to Gallery", images_path, class:"btn btn-xs btn-success" %>
  </div>
</div>

